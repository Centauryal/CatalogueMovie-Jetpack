<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/aquamarine</item>
        <item name="colorOnPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/java</item>
        <item name="colorSecondary">@color/violet_red</item>
        <item name="colorSecondaryVariant">@color/lipstick</item>
        <item name="colorSurface">@color/cod_gray</item>
        <item name="colorOnSurface">@android:color/white</item>
        <item name="colorOnBackground">@color/mine_shaft</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/varelaround_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

</resources>