<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="hasFavoriteTVShows"
            type="boolean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.centaury.cataloguemovie.favorite.fragment.FavoriteTVShowFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_fav_tv_show"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:isGone="@{hasFavoriteTVShows}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_movie_list" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:isGone="@{!hasFavoriteTVShows}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shimmer_duration="800">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/item_movie_placeholder" />

                <include layout="@layout/item_movie_placeholder" />

                <include layout="@layout/item_movie_placeholder" />

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <include
            android:id="@+id/empty_state"
            layout="@layout/item_empty_state_placeholder" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
